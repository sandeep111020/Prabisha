<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="600dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    style="@style/BottomSheetTheme"
    android:background="@drawable/background_login"

    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"


        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/person_24px__1_"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/person_24px__1_"
        android:hint="Please enter employee id"
        android:id="@+id/edttxt_empid"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        app:passwordToggleEnabled="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="15dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/icon_ionic_ios_lock"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/icon_ionic_ios_lock"
            android:hint="  Password"
            android:id="@+id/edttxt_password"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_marginTop="20dp"
        android:id="@+id/errorlogintext"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkaccount"
        android:text="Remember me"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:text="Login"
        android:layout_marginBottom="150dp"
        android:id="@+id/loginbutton"
        android:textSize="24dp"

        android:background="@drawable/rounded1"/>



</LinearLayout>